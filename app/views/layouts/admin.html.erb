<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> 
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <%= render 'shared/admin_nav' %>
    <%= render 'shared/flash' %>
    <%= yield %>
    <%= render 'shared/footer_offset' %>
    <div class='row card-footer fixed-bottom' style="background-color: #c6f2fb;"><%= render 'shared/footer' %></div>
  </body>
</html>
