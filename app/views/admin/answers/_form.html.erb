<%= form_with url: (@answer.new_record? ? admin_question_answers_path(@answer.question) : admin_answer_path(@answer)), model: [@question, @answer] do |form| %>
  <%= form.label :body, "Содержание:" %>
  <%= form.text_area :body %><br>
  <%= form.label :correct, "Ответ верный?" %>
  <%= form.select :correct, [["Да", true], ["Нет", false]] %><br>
  <%= form.submit "Сохранить" %>
<% end %>