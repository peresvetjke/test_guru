<%= form_with url: (@test.new_record? ? admin_tests_path : admin_test_path(@test)), model: @test do |form| %>
    <%= form.label :title %> <br>
    <%= form.text_field :title %> <br>
    <%= form.label :category_id %> <br>
    <%= form.collection_select :category_id, Category.order(:name), :id, :title, prompt: true %> <br>
    <%= form.label :level %> <br>
    <%= form.number_field :level %><br>
    <br>
    <%= form.submit t('admin.save') %>
<% end %>
