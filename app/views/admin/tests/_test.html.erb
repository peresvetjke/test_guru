  <tr>
    <td class="align-middle">
      <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
      <%= render 'form_inline', test: @test == test ? @test : test %>
    </td>
    <td class="align-middle"><%= publication_status(test) %></td>
    <td class="align-middle"><%= test.category.title %></td>
    <td class="align-middle"><%= test_level(test) %></td>
    <td class="align-middle"><%= test.max_time_min %></td>
    <td class="align-middle"><%= test.questions.count %></td>
    <td class="align-middle"><%= link_to t('admin.show'), admin_test_path(test) %></td>
    <td class="align-middle"><%= link_to t('admin.change'), 
                                          edit_admin_test_path(test), 
                                          data: { test_id: test.id },
                                          class: 'form-inline-link' %>
    </td>
    <td class="align-middle"><%= link_to t('admin.delete'), admin_test_path(test),
                                method: :delete,
                                data: { confirm: t('admin.confirm') } %></td>
  </tr>