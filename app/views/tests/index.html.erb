  <br>
  <%= link_to 'Новый тест', new_test_path %>
  <table>
  <tr>
    <th>Title</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @tests.each do |test| %>
  <tr>
    <td><%= test.title %></td>
    <td><%= link_to 'Просмотреть', test_path(test) %></td>
    <td><%= link_to 'Изменить', edit_test_path(test) %></td>
    <td><%= link_to 'Удалить', test_path(test),
                                method: :delete,
                                data: { confirm: 'Вы действительно хотите удалить запись?' } %></td>
  </tr>
  <% end %>
  </table>