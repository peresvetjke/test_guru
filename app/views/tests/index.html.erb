    <th><%= t('.category') %></th>
    <th><%= t('.level') %></th>
    <th><%= t('.questions_amount') %></th>
    <th colspan="2"><%= t('.passage') %></th>
    <th><%= t('.current_question') %></th>
  </tr>
  <%= render @tests %>
  </table>
  <br>
</div>