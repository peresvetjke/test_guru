  <h2><%= t('.heading') %></h2>
  <table class='table table-bordered'>
  <tr>
    <th class="sort-by-title pointer"><%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success' %>
      <%= octicon 'arrow-down', class: 'text-success' %>
