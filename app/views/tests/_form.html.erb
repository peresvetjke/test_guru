<%= form_with model: @test do |form| %>
  <%= form.label :title %> <br>
  <%= form.text_field :title %> <br>
  <%= form.label :category_id %> <br>
  <%= form.collection_select :category_id, Category.order(:name), :id, :title %> <br>
  <%= form.label :level %> <br>
  <%= form.number_field :level %><br>
  <%= form.label :author_id %> <br>
  <%= form.collection_select :author_id, User.order(:email), :id, :email %> <br>
  <br>
  <%= form.submit 'Сохранить' %>
<% end %>
