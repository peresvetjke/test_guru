  <tr>
    <td><%= test.title %></td>
    <td><%= test.category.title %></td>
    <td><%= test_level(test) %></td>
    <td><%= test.questions.count %></td>
    <td><%= link_to 'Просмотреть', test_path(test) %></td>
    <td><%= link_to 'Изменить', edit_test_path(test) %></td>
    <td><%= link_to 'Удалить', test_path(test),
                                method: :delete,
                                data: { confirm: 'Вы действительно хотите удалить запись?' } %></td>
    <td><%= button_to "Начать", start_test_path(test), :method => :post %></td>

<% if current_user.test_passage(test).present? && !current_user.test_passage(test).completed? %>
    <td><%= button_to "Продолжить", test_passage_path(current_user.test_passage(test)), :method => :get %></td>
    <td><%= current_user.test_passage(test).current_question_order_number %></td>
<% else %>
    <td>-</td>
    <td>-</td>
<% end %>
  </tr>