<%= link_to 'Новый ответ', new_question_answer_path(@question) %>

<h2>Вопрос '<%= @question.body %>'</h2>
<% if @question.answers.present? %>
<h3>Список ответов:</h3>
  <table>
  <tr>
    <th>Содержание</th>
    <th>Верный</th>
    <th colspan="3">Действия</th>
  </tr>
  <% @question.answers.each do |answer| %>
    <tr>
      <td><%= answer.body %></td>
      <td><%= answer.correct ? "Да" : "Нет" %></td>
      <td><%= link_to 'Просмотреть', answer_path(answer) %></td>
      <td><%= link_to 'Изменить', edit_answer_path(answer) %></td>
      <td><%= link_to 'Удалить', answer_path(answer),
                                  method: :delete,
                                  data: { confirm: 'Вы действительно хотите удалить запись?' } %></td>
    </tr>
  <% end %>
  </table>
<% else %>
  <p>Ответов пока нет.</p>
<% end %>

<p> <%= link_to 'Изменить', edit_question_path %> |
<%= link_to 'Вернуться', test_path(@question.test) %> </p>